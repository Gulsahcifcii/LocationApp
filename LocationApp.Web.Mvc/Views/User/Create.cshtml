@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <!-- NProgress -->
    <link href="../vendors/nprogress/nprogress.css" rel="stylesheet">
    @Html.Partial("/Views/Shared/Partials/DataTable/_Css.cshtml")
}
<div class="right_col" role="main">
    <div class="">
    <div class="page-title">
            <div class="title_left">
                <h3>Kullanıcı Ekleme</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Aramak için...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Git!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
    <div class="x_title">
                        <h2>Kullanıcı Ekleme Formu</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Ayar 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Ayar 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
    <div class="x_content">
    <!-- Smart Wizard -->
    <p>Kullanıcı oluşturmak için adım adım bilgileri dolurarak tamamlayabilirsiniz.</p>
        <div id="wizard" class="form_wizard wizard_horizontal">
            <ul class="wizard_steps">
                                <li>
                                    <a href="#step-1">
                                        <span class="step_no">1</span>
                                        <span class="step_descr">
                                            Adım 1<br />
                                            <small>Kişisel Bilgiler</small>
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-2">
                                        <span class="step_no">2</span>
                                        <span class="step_descr">
                                            Adım 2<br />
                                            <small>İletişim Bilgileri</small>
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-3">
                                        <span class="step_no">3</span>
                                        <span class="step_descr">
                                            Adım 3<br />
                                            <small>Ünvan Bilgileri</small>

                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-4">
                                        <span class="step_no">4</span>
                                        <span class="step_descr">
                                            Adım 4<br />
                                            <small>Kullanıcı Rolü</small>

                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-5">
                                        <span class="step_no">5</span>
                                        <span class="step_descr">
                                            Adım 5<br />
                                            <small>Final</small>
                                        </span>
                                    </a>
                                </li>
            </ul>
        <div id="step-1">
        <form class="form-horizontal form-label-left">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                            Ad <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="text" id="first-name" required="required" class="form-control col-md-7 col-xs-12">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                            Soyad <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="text" id="last-name" name="last-name" required="required" class="form-control col-md-7 col-xs-12">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Orta İsim</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input id="middle-name" class="form-control col-md-7 col-xs-12" type="text" name="middle-name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Cinsiyet</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div id="gender" class="btn-group" data-toggle="buttons">
                                                <label class="btn btn-default" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                                                    <input type="radio" name="gender" value="Erkek"> &nbsp; Erkek &nbsp;
                                                </label>
                                                <label class="btn btn-primary" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                                                    <input type="radio" name="gender" value="Kadin"> Kadın
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                            Doğum Tarihi <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input id="birthday" class="date-picker form-control col-md-7 col-xs-12" required="required" type="date">
                                        </div>
                                    </div>
                                </form>
        </div>
        <div id="step-2">
                                <div class="title_right pull-right">
                                    <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 form-group pull-right">
                                        <div class="input-group pull-right">
                                            <button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-success pull-right "><i class="fa fa-plus-circle"></i> Yeni</button>
                                        </div>
                                    </div>
                                </div>
                                <form class="form-horizontal form-label-left">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Tel">
                                            Cep Telefonu  <span class="required">*</span> <!-- Harf Engelleme Koyulacak -->
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="tel" id="tel" required="required" class="form-control col-md-7 col-xs-12">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="E-mail">
                                            E-mail <span class="required">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="email" id="email" name="Email" required="required" class="form-control col-md-7 col-xs-12">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Adres</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input id="adres" class="form-control col-md-7 col-xs-12" type="text" name="adres">
                                        </div>
                                    </div>
                                </form>
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Yeni İletişim Bilgisi Oluştur </h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <p>* Aşağıda daha önceden belirtilmiş olan bir iletişim türü veya daha özel bir iletişim türü belirleyebilirsiniz</p>
                                            <div class="modal-body">
                                                <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                                                    <input type="hidden" id="User" style="visibility:hidden" />
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">İletişim Türü :</label>
                                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                                            <select id="User" class="form-control">
                                                                <option value="" disabled selected>Opsiyon Seçiniz</option>
                                                                <option>Özel E-posta</option>
                                                                <option>Özel İş Adresi</option>
                                                                <option>Özel Cep Telefonu</option>
                                                                <option>Özel Ev Telefonu</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                                            Özel Tercih : <span class="required"></span>
                                                        </label>
                                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                                            <input type="text" id="name" required="required" class="form-control col-md-7 col-xs-12">
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="modal-footer">
                                                <button class="btn btn-primary" type="reset">Temizle</button>
                                                <button type="submit" class="btn btn-success">Kaydet</button>
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
        </div>
        <div id="step-3">
            
            <form class="form-horizontal form-label-left">
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                        Ünvan Bilgisi  <span class="required">*</span> <!-- Harf Engelleme Koyulacak -->
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input type="text" id="unvan" required="required" class="form-control col-md-7 col-xs-12">
                    </div>
                </div>
            </form>
            
        </div>
        <div id="step-4">
                                <form class="form-horizontal form-label-left">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="User-role">
                                            Kullanıcı Rolü  <span class="required">*</span> <!-- Harf Engelleme Koyulacak -->
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <input type="text" id="User-role" required="required" class="form-control col-md-7 col-xs-12">
                                        </div>
                                    </div>
                                </form>
                            </div>
        </div>
                        <!-- End SmartWizard Content -->
    </div>
    </div>
    </div>
    </div>
    </div>
</div>
@section Scripts{
    <!-- FastClick -->
    <script src="../vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="../vendors/nprogress/nprogress.js"></script>
    <!-- jQuery Smart Wizard -->
    <script src="../vendors/jQuery-Smart-Wizard/js/jquery.smartWizard.js"></script>
    @Html.Partial("/Views/Shared/Partials/DataTable/_Js.cshtml")
}
