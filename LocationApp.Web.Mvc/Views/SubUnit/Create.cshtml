@model LocationApp.Data.Dto.SubUnitDto
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @Html.Partial("/Views/Shared/Partials/DataTable/_Css.cshtml")
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Alt Birim </h3>
            </div>
            <div class="title_right pull-right">
                <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12 form-group pull-right">
                    <div class="input-group pull-right">
                        <button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-success pull-right "><i class="fa fa-plus-circle"></i> Yeni</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Alt Birim<small></small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div> @Html.Raw(ViewBag.Message)</div>
                    @using (Html.BeginForm("Create", "SubUnit", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                    {
                        @Html.HiddenFor(model => model.SubUnitID)
                        <div class="form-group">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="siteID">Ana Birim:*</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.DropDownList("MainUnitID", null, new { @class = "form-control" })
                                </div>
                            </div>
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                Alt Birim:<span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control col-md-7 col-xs-12" , @required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="submit" class="btn btn-success pull-right">Kaydet</button>
                                <a href="/SubUnit/List" class="btn btn-primary pull-right" type="button">Listeleye Dön</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

@section Scripts{
    @Html.Partial("/Views/Shared/Partials/DataTable/_Js.cshtml")
}
